//#define JOG ADMIN_LEVEL_C

public plugin_init() {
	register_plugin("Vip Model", "1.0", "Supra:.");
	
	RegisterHam(Ham_Spawn, "player", "PlayerSpawn");
}
public plugin_precache()
{
	precache_model("models/player/vip_te/vip_te.mdl");
	precache_model("models/player/vip_ct/vip_ct.mdl");
}
public PlayerSpawn(id)
{
	#if defined JOG
	if(~get_user_flags(id) & JOG)
	#endif
	
	switch(cs_get_user_team(id))
	{
		case CS_TEAM_T: cs_set_user_model(id, "vip_te");
		case CS_TEAM_CT: cs_set_user_model(id, "vip_ct");
		default: cs_reset_user_model(id);
	}
}
